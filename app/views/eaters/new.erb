<h1>Sign Up!</h1>

<%= form_for @eater, url: signup_path, html: { class: "form "} do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>

   <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <% if @errors %>
    <ol class="messages">
      <% @errors.each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ol>
  <% end %>

  <%= f.submit %>
<% end %>